@model PointOpeOsaaminen.Models.Osaamiset

@{
    ViewBag.Title = "Edit";
    if (Session["LogedKäyttäjäID"].ToString() != "1")
    {
        Response.Redirect("~/Käyttäjät/Index");
    }
}

<h2 style="text-align:center"><b>Muokkaa</b></h2>

@using (Html.BeginForm())
{    @*@Html.AntiForgeryToken()*@


<div class="form-horizontal" style="background-color:azure">
    <h4 style="padding-left:160px"><b>Osaamiset</b></h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.OsaamisID)

    <div class="form-group">
        @Html.LabelFor(model => model.Osaaminen, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Osaaminen, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Osaaminen, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Kuvaus, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Kuvaus, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Kuvaus, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Tallenna" class="btn btn-default" />
        </div>
    </div>
    <div>
        @Html.ActionLink("Takaisin", "Index")
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
